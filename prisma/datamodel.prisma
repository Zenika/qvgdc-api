type Player {
  id: ID! @id
  name: String!
  game: Game!
  score: Int
  responseTime: Int
  answers: [Answer!]!
}

type Answer {
  id: ID! @id
  choice: Choice!
  player: Player!
}

type Question {
  id: ID! @id
  duration: Int!
  title: String!
  choices: [Choice!]! @relation(name: "QuestionChoices")
  goodChoice: Choice @relation(link: INLINE, name: "QuestionGoodChoice")
  answers: [Answer!]!
  order: Int!
  user: User!
  game: Game! @relation(name: "GameQuestions")
  launched: DateTime
}

type Choice {
  id: ID! @id
  title: String!
  question: Question! @relation(name: "QuestionChoices")
  answers: [Answer!]!
  user: User!
}

type Game {
  id: ID! @id
  title: String!
  open: Boolean! @default(value: false)
  finish: Boolean! @default(value: false)
  state: Int
  players: [Player!]!
  questions: [Question!]! @relation(name: "GameQuestions")
  currentQuestion: Question @relation(link: INLINE, name: "CurrentGameQuestion")
  user: User!
}

type User {
  id: ID! @id
  email: String! @unique
  password: String!
  games: [Game!]!
  choices: [Choice!]!
  questions: [Question!]!
}